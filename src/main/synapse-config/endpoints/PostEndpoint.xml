<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="PostEndpoint" xmlns="http://ws.apache.org/ns/synapse">
    <http method="post" uri-template="{uri.var.httpendpoint}">
        <suspendOnFailure>
            <initialDuration>60000</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
